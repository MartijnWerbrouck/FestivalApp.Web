@model FestivalApp.Web.ViewModels.TicketVM

@using (Html.BeginForm(FormMethod.Post))
{
<h2>Tickets</h2>

<fieldset>
    <legend>Band</legend>

    <div class="editor-label" style="margin-top:5px; font-weight:bold;">
        <p>Naam</p>
    </div>
    <div class="display-field">
        @Html.EditorFor(model => model.NewTicket.Ticketholder)
    </div>

    <div class="display-label" style="font-weight:bold;">
        <p>Email</p>
    </div>
    <div class="display-field">
        @Html.EditorFor(model => model.NewTicket.TicketholderEmail)
    </div>

    <div class="display-label" style="font-weight:bold;">
        <p>Type</p>
    </div>
    <div class="display-field">
        @Html.DropDownList("sType", Model.lstTicketTypes as SelectList,"---- Selecteer uw keuze ----" ) 
    </div>

    <div class="display-label" style="font-weight:bold;">
         <p>Aantal</p>
    </div>
    <div class="display-field">
        @Html.EditorFor(model => model.NewTicket.Amount)
    </div>

</fieldset>

<button type="submit" value="Reserveer" name="ActionReserveer">Reserveer</button>
}